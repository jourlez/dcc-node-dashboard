{
    "name": "decentralchain/dcc-node-dashboard",
    "description": "Node Dashboard for Decentralchain",
    "type": "wordpress-plugin",
    "keywords": [
        "decentralchain",
        "dcc-node-dashboard"
    ],
    "homepage": "https://github.com/decentralchain/dcc-node-dashboard",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Josu√© Rojas",
            "email": "josuecr.288@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "decentralchain/composer-wordpress-autoloader": "^1.0",
        "decentralchain/wp-type-extensions": "^2.1"
    },
    "require-dev": {
        "decentralchain/alley-coding-standards": "^2.0",
        "mantle-framework/testkit": "^1.0",
        "szepeviktor/phpstan-wordpress": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "decentralchain/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "autoload-dev": {
        "psr-4": {
            "DCC_Node_Dashboard\\Tests\\": "tests"
        }
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "DCC_Node_Dashboard": "src"
            },
            "autoload-dev": {
                "DCC_Node_Dashboard\\Tests": "tests"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "phpstan": "phpstan --memory-limit=512M",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    }
}
